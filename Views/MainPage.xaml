<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KYCApp.Views.MainPage"
             Title="ControlVisitas"
             BackgroundColor="#FFFFFF">

    <ScrollView>
        <StackLayout Spacing="0">
            
            <!-- Header con gradiente estilo oscuro -->
            <Frame HasShadow="False"
                   CornerRadius="0"
                   Padding="25,50,25,30">
                <Frame.Background>
                    <SolidColorBrush Color="#FFFFFF" />
                </Frame.Background>
                <StackLayout>
                    <!-- Logo de O'Donnell corporativo -->
                    <Image Source="odonnell_logo.svg" 
                           HeightRequest="60"
                           HorizontalOptions="Start"
                           Margin="0,0,0,20" />
                    
                    <Label Text="Control de Visitantes" 
                           FontSize="32" 
                           FontAttributes="None"
                           FontFamily="Arial"
                           HorizontalOptions="Start" 
                           TextColor="#1A1A1A" />
                    
                    <Label Text="Desarrollamos y gestionamos edificios industriales" 
                           FontSize="14" 
                           FontFamily="Arial"
                           HorizontalOptions="Start" 
                           TextColor="#666666"
                           Margin="0,8,0,0" />
                </StackLayout>
            </Frame>
            
            <!-- Contenido principal limpio -->
            <StackLayout Padding="30" Spacing="30" BackgroundColor="#FFFFFF">
                
                <!-- Tarjeta principal estilo corporativo -->
                <Frame BackgroundColor="#F8F9FA" 
                       HasShadow="True" 
                       CornerRadius="12"
                       Padding="30,25"
                       BorderColor="#E8E8E8">
                    <StackLayout Spacing="20">
                        
                        <!-- Escáner QR -->
                        <Frame BackgroundColor="#1A1A1A" 
                               CornerRadius="8"
                               Padding="25,20"
                               HasShadow="True">
                            <Frame.Background>
                                <SolidColorBrush Color="#1A1A1A" />
                            </Frame.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackLayout Grid.Column="0" VerticalOptions="Center">
                                    <Label Text="Acceso de Visitantes" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           FontFamily="Arial"
                                           TextColor="White" />
                                    <Label Text="Validación y Registro" 
                                           FontSize="13" 
                                           FontFamily="Arial"
                                           TextColor="#CCCCCC" />
                                    <Label Text="Escaneo de código QR para visitantes autorizados" 
                                           FontSize="12" 
                                           FontFamily="Arial"
                                           TextColor="#F0F0F0"
                                           Margin="0,8,0,0" />
                                </StackLayout>
                                
                                <Label Grid.Column="1" 
                                       Text="⬜" 
                                       FontSize="28"
                                       TextColor="White"
                                       VerticalOptions="Center" />
                            </Grid>
                            
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnScanQRClicked" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        
                        <!-- Mensaje informativo -->
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="ℹ️" FontSize="16" VerticalOptions="Center" />
                            <Label Text="Escanea el código QR para iniciar registro" 
                                   FontSize="12" 
                                   FontFamily="Arial"
                                   TextColor="#9CA3AF"
                                   VerticalOptions="Center"
                                   LineBreakMode="TailTruncation" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
