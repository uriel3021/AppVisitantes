<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KYCApp.Views.SelfiePage"
             Title="Selfie Verificación"
             BackgroundColor="#000000">

    <ScrollView>
        <StackLayout Spacing="0">
            
            <!-- Header con gradiente Galxe -->
            <Frame HasShadow="False"
                   CornerRadius="0"
                   Padding="25,50,25,30">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8B5CF6" Offset="0.0" />
                        <GradientStop Color="#3B82F6" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
                <StackLayout Orientation="Horizontal">
                    <Button Text="✕"
                            FontSize="24"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Clicked="OnBackClicked"
                            VerticalOptions="Center" />
                    
                    <Label Text="🤳 Selfie Verificación" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           FontFamily="Arial"
                           TextColor="White" 
                           VerticalOptions="Center" 
                           HorizontalOptions="CenterAndExpand" />
                    
                    <Button Text="⋮"
                            FontSize="24"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            WidthRequest="40"
                            HeightRequest="40"
                            VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            
            <!-- Contenido principal -->
            <StackLayout Padding="20" Spacing="25" BackgroundColor="#000000">
                
                <!-- Tarjeta principal de selfie -->
                <Frame BackgroundColor="#1A1A1A" 
                       CornerRadius="16"
                       Padding="25,30"
                       HasShadow="True"
                       BorderColor="#333333">
                    <StackLayout Spacing="20">
                        
                        <!-- Área de selfie circular -->
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="100"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#8B5CF6"
                               WidthRequest="200"
                               HeightRequest="200"
                               HorizontalOptions="Center">
                            
                            <StackLayout x:Name="SelfieePlaceholder" 
                                         Spacing="10"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center">
                                <Label Text="🤳" 
                                       FontSize="40" 
                                       HorizontalOptions="Center"
                                       TextColor="#8B5CF6" />
                                <Label Text="Sin Selfie" 
                                       FontSize="14" 
                                       FontFamily="Arial"
                                       FontAttributes="Bold"
                                       TextColor="#FFFFFF"
                                       HorizontalOptions="Center" />
                            </StackLayout>
                            
                            <Ellipse x:Name="SelfieImageContainer"
                                     IsVisible="False"
                                     Fill="Transparent"
                                     Stroke="#8B5CF6"
                                     StrokeThickness="3"
                                     WidthRequest="200"
                                     HeightRequest="200">
                                <Ellipse.Clip>
                                    <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100" />
                                </Ellipse.Clip>
                            </Ellipse>
                            
                            <Image x:Name="SelfieImage"
                                   IsVisible="False"
                                   Aspect="AspectFill"
                                   WidthRequest="200"
                                   HeightRequest="200">
                                <Image.Clip>
                                    <EllipseGeometry Center="100,100" RadiusX="98" RadiusY="98" />
                                </Image.Clip>
                            </Image>
                        </Frame>
                        
                        <!-- Botón de captura principal -->
                        <Button Text="🤳 Tomar Selfie"
                                FontSize="16"
                                FontAttributes="Bold"
                                FontFamily="Arial"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="50"
                                Clicked="OnTakeSelfieClicked">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#8B5CF6" Offset="0.0" />
                                    <GradientStop Color="#3B82F6" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackLayout>
                </Frame>
                
                <!-- Tarjeta de instrucciones para selfie -->
                <Frame BackgroundColor="#1A1A1A" 
                       CornerRadius="16"
                       Padding="25,20"
                       HasShadow="False"
                       BorderColor="#333333">
                    <StackLayout Spacing="15">
                        <Label Text="✨ Consejos para tu Selfie Perfecto" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               FontFamily="Arial"
                               TextColor="#FFFFFF" />
                        
                        <StackLayout Spacing="12">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="🔸" FontSize="12" TextColor="#8B5CF6" VerticalOptions="Start" />
                                <Label Text="Mantén tu rostro bien centrado en el círculo" 
                                       FontSize="13" 
                                       FontFamily="Arial"
                                       TextColor="#E0E0E0"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="🔸" FontSize="12" TextColor="#8B5CF6" VerticalOptions="Start" />
                                <Label Text="Asegúrate de tener buena iluminación" 
                                       FontSize="13" 
                                       FontFamily="Arial"
                                       TextColor="#E0E0E0"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="🔸" FontSize="12" TextColor="#8B5CF6" VerticalOptions="Start" />
                                <Label Text="Retira gafas de sol y mantén expresión neutral" 
                                       FontSize="13" 
                                       FontFamily="Arial"
                                       TextColor="#E0E0E0"
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
                <!-- Botón continuar -->
                <Button x:Name="ContinueButton"
                        Text="✅ Continuar al Resumen"
                        FontSize="16"
                        FontAttributes="Bold"
                        FontFamily="Arial"
                        TextColor="White"
                        BackgroundColor="#059669"
                        CornerRadius="12"
                        HeightRequest="50"
                        IsVisible="False"
                        Clicked="OnContinueClicked"
                        Margin="0,10,0,30" />
                
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
