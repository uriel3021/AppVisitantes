                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Clicked="OnBackClicked"
                            VerticalOptions="Center" />
                    
                    <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
