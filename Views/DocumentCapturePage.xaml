                </StackLayout>
            </Frame>
            
            <!-- Contenido principal -->
            <StackLayout Padding="20" Spacing="25" BackgroundColor="#000000">
                
                <!-- Tarjeta principal de captura -->
                <Frame BackgroundColor="#1A1A1A" 
                       CornerRadius="16"
                       Padding="25,30"
                       HasShadow="True"
                       BorderColor="#333333">
                    <StackLayout Spacing="20">
                        
                        <!-- Ãrea de imagen -->
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="12"
                               Padding="40,60"
                               HasShadow="False"
                               BorderColor="#444444">
                            <StackLayout x:Name="PhotoPlaceholder" Spacing="15">
                                <Label Text="ðŸ“·" 
                                       FontSize="48" 
                                       HorizontalOptions="Center"
                                       TextColor="#8B3A3A" />
                                <Label Text="Documento no capturado" 
                                       FontSize="16" 
                                       FontFamily="Arial"
                                       FontAttributes="Bold"
                                       TextColor="#FFFFFF"
                                       HorizontalOptions="Center" />
