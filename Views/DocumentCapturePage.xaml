                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                            
                            <Image x:Name="DocumentImage"
                                   IsVisible="False"
                                   Aspect="AspectFit"
                                   HeightRequest="200" />
                        </Frame>
                        
                        <!-- BotÃ³n de captura principal -->
                        <Button Text="ðŸ“¸ Capturar Documento"
                                FontSize="16"
                                FontAttributes="Bold"
                                FontFamily="Arial"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="50"
                                Clicked="OnTakePhotoClicked">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#8B3A3A" Offset="0.0" />
                                    <GradientStop Color="#A64545" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackLayout>
                </Frame>
                
                <!-- Tarjeta de instrucciones -->
                <Frame BackgroundColor="#1A1A1A" 
                       CornerRadius="16"
                       Padding="25,20"
                       HasShadow="False"
                       BorderColor="#333333">
                    <StackLayout Spacing="15">
                        <Label Text="ðŸ’¡ Instrucciones de Captura" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               FontFamily="Arial"
                               TextColor="#FFFFFF" />
                        
                        <StackLayout Spacing="12">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="ðŸ”¸" FontSize="12" TextColor="#8B3A3A" VerticalOptions="Start" />
                                <Label Text="Documento bien iluminado" 
                                       FontSize="13" 
                                       FontFamily="Arial"
                                       TextColor="#E0E0E0"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="ðŸ”¸" FontSize="12" TextColor="#8B3A3A" VerticalOptions="Start" />
                                <Label Text="Mantener plano y sin dobleces" 
