<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KYCApp.Views.DocumentCapturePage"
             Title="Capturar Documento">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Text="Toma una foto del documento" 
               FontSize="20"
               HorizontalOptions="Center"
               Margin="20" />

        <Frame Grid.Row="1" 
               BackgroundColor="LightGray"
               Margin="20"
               HasShadow="True">
            <Grid>
                <Label Text="Imagen del documento aparecerá aquí"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       x:Name="PlaceholderLabel" />
                <Image x:Name="DocumentImage"
                       IsVisible="False"
                       Aspect="AspectFit" />
            </Grid>
        </Frame>

        <StackLayout Grid.Row="2" 
                     Padding="20">
            <Button Text="Tomar Foto"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    FontSize="18"
                    Clicked="OnTakePhotoClicked"
                    x:Name="TakePhotoButton" />
            
            <Button Text="Continuar"
                    BackgroundColor="#28a745"
                    TextColor="White"
                    FontSize="18"
                    Clicked="OnContinueClicked"
                    IsVisible="False"
                    x:Name="ContinueButton"
                    Margin="0,10,0,0" />
        </StackLayout>
    </Grid>

</ContentPage>
